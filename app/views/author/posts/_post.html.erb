<table style="width:75%">
  <th>Title</th>
  <tr>
    <td align="left"><%= link_to post.title, author_post_path(post), class: 'btn btn-sm btn-info'%></td>
    <td><%= link_to 'Edit', edit_author_post_path(post), class: 'btn btn-sm btn-warning'%></td>
    <td align="right"><%= link_to 'Remove', author_post_path(post), method: :delete, data: {
      confirm: 'Are you sure?'}, class: 'btn btn-sm btn-danger'%></td>
  </tr>
  
</table>